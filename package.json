{
  "name": "sigl-engine",
  "version": "0.1.0",
  "description": "Structured Image Generation Language (SIGL) - A domain-specific language for generating scene illustrations",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "type-check": "tsc --noEmit",
    "antlr:generate": "npx antlr4 -Dlanguage=TypeScript -visitor -no-listener src/parser/grammar/SIGL.g4 -o src/parser/generated",
    "clean": "rm -rf dist node_modules/.vite",
    "prepare": "husky install"
  },
  "keywords": [
    "sigl",
    "image-generation",
    "scene-generation",
    "illustration",
    "dsl",
    "typescript",
    "structured-language"
  ],
  "author": "SIGL Team",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "antlr4": "^4.13.0",
    "antlr4ts": "^0.5.0-alpha.4",
    "chroma-js": "^2.4.2",
    "fabric": "^5.3.0",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/chroma-js": "^3.1.1",
    "@types/lodash": "^4.14.200",
    "@types/node": "^22.0.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
